<?xml version="1.0" encoding="UTF-8"?>
<svg width="1920" height="1080" viewBox="0 0 1920 1080" fill="none" xmlns="http://www.w3.org/2000/svg">
  <!-- Gradient background -->
  <rect width="1920" height="1080" fill="url(#bg-gradient)"/>
  
  <!-- Grid lines -->
  <g opacity="0.08">
    <line x1="0" y1="0" x2="1920" y2="1080" stroke="#60a5fa" stroke-width="1"/>
    <line x1="0" y1="1080" x2="1920" y2="0" stroke="#60a5fa" stroke-width="1"/>
    
    <!-- Horizontal lines -->
    <line x1="0" y1="270" x2="1920" y2="270" stroke="#60a5fa" stroke-width="1"/>
    <line x1="0" y1="540" x2="1920" y2="540" stroke="#60a5fa" stroke-width="1"/>
    <line x1="0" y1="810" x2="1920" y2="810" stroke="#60a5fa" stroke-width="1"/>
    
    <!-- Vertical lines -->
    <line x1="480" y1="0" x2="480" y2="1080" stroke="#60a5fa" stroke-width="1"/>
    <line x1="960" y1="0" x2="960" y2="1080" stroke="#60a5fa" stroke-width="1"/>
    <line x1="1440" y1="0" x2="1440" y2="1080" stroke="#60a5fa" stroke-width="1"/>
  </g>
  
  <!-- Glowing points -->
  <circle cx="480" cy="270" r="3" fill="#60a5fa" opacity="0.5"/>
  <circle cx="960" cy="540" r="5" fill="#4f46e5" opacity="0.5"/>
  <circle cx="1440" cy="810" r="3" fill="#60a5fa" opacity="0.5"/>
  
  <!-- Subtle atom patterns -->
  <g opacity="0.12">
    <ellipse cx="960" cy="540" rx="250" ry="80" transform="rotate(0 960 540)" stroke="#4f46e5" stroke-width="1"/>
    <ellipse cx="960" cy="540" rx="250" ry="80" transform="rotate(60 960 540)" stroke="#4f46e5" stroke-width="1"/>
    <ellipse cx="960" cy="540" rx="250" ry="80" transform="rotate(120 960 540)" stroke="#4f46e5" stroke-width="1"/>
  </g>
  
  <!-- Definitions -->
  <defs>
    <linearGradient id="bg-gradient" x1="0" y1="0" x2="1920" y2="1080" gradientUnits="userSpaceOnUse">
      <stop offset="0%" stop-color="#0f172a"/>
      <stop offset="50%" stop-color="#1e293b"/>
      <stop offset="100%" stop-color="#0f172a"/>
    </linearGradient>
  </defs>
</svg>

@page
@model Web.Pages.Movimientos.IndexModel
@{
}
<header class="subhead">
</header>

<section class="page-section bg-light" id="principal">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Listado de Movimientos</h2>
            <h3 class="section-subheading text-muted">Detalle de movimientos registrados.</h3>
        </div>
        <div class="text-center mb-4">
            <a type="button" class="btn btn-group-lg btn-success btn-lg" asp-page="./Agregar"><i class="bi bi-plus-square"></i> Agregar</a>
        </div>
        <div class="row">
            @if (Model.Movimientos != null)
            {
                @foreach (var movimiento in Model.Movimientos)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title"><i class="bi bi-cash-coin"></i> @Html.DisplayFor(modelo => movimiento.Descripcion)</h5>
                                <h6 class="card-subtitle mb-2 text-muted">₡@Html.DisplayFor(modelo => movimiento.Monto)</h6>
                                <p class="card-text">Realizado el @Html.DisplayFor(modelo => movimiento.Fecha)</p>
                                <a type="button" class="btn btn-primary" asp-page="./Detalle" asp-route-id="@movimiento.IdMovimiento"><i class="bi bi-info-square"></i> Detalle</a>
                                <a type="button" class="btn btn-warning" asp-page="./Editar" asp-route-id="@movimiento.IdMovimiento"><i class="bi bi-pencil-square"></i> Editar</a>
                                <a type="button" class="btn btn-danger" asp-page="./Eliminar" asp-route-id="@movimiento.IdMovimiento"><i class="bi bi-trash3-fill"></i> Eliminar</a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    No hay movimientos disponibles.
                </div>
            }
        </div>
    </div>
</section>

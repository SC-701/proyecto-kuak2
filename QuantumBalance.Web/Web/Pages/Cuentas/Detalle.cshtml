@page
@model Web.Pages.Cuentas.DetalleModel
@{
}
<header class="subhead">
</header>

<section class="page-section" id="detalle">
    <div class="container" style="max-width: fit-content;">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Detalle de la cuenta</h2>
            <h3 class="section-subheading text-muted">Información completa de la cuenta seleccionada.</h3>
        </div>

        @if (Model.cuenta != null)
        {
            <div class="card mb-3 w-100 shadow-sm">
                <div class="card-body">
                    <div>
                        <b>Nombre:</b> @Model.cuenta.Nombre
                    </div>
                    <div>
                        <b>Descripción:</b> @Model.cuenta.Descripcion
                    </div>
                    <div>
                        <b>Tipo:</b> @Model.cuenta.Tipo
                    </div>
                </div>
            </div>
        }
        <a class="btn btn-primary" asp-page="./Index">Regresar</a>
        <a class="btn btn-warning" asp-page="./Editar" asp-route-id="@Model.cuenta.IdCuenta">Editar</a>
        <a class="btn btn-danger" asp-page="./Eliminar" asp-route-id="@Model.cuenta.IdCuenta">Eliminar</a>
    </div>
</section>

@page
@model Web.Pages.Cuentas.EditarModel
@{
    ViewData["Title"] = "Editar Cuenta";
}

<h2>Editar Cuenta</h2>
<header class="subhead">
</header>

<section class="page-section bg-light" id="principal">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Editar Cuenta</h2>
            <h3 class="section-subheading text-muted">Modifique la información requerida.</h3>
        </div>

        <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto ">
            <form method="post">
                <div class="form-group">
                    <label for="usuarios">Usuario</label>
                    <select asp-for="cuenta.IdUsuario" class="form-select" asp-items="Model.usuarios">
                        <option value="">Seleccione un usuario</option>
                    </select>
                    <span class="text-danger" asp-validation-for="cuenta.IdUsuario"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="cuenta.Nombre"></label>
                    <input class="form-control" asp-for="cuenta.Nombre" />
                    <span class="text-danger" asp-validation-for="cuenta.Nombre"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="cuenta.Descripcion"></label>
                    <input class="form-control" asp-for="cuenta.Descripcion" />
                    <span class="text-danger" asp-validation-for="cuenta.Descripcion"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="cuenta.Tipo"></label>
                    <input class="form-control" asp-for="cuenta.Tipo" />
                    <span class="text-danger" asp-validation-for="cuenta.Tipo"></span>
                </div>
                <div class="text-danger" asp-validation-summary="All"></div>
                <div class="form-group">
                    <a class="btn btn-primary" asp-page="./Index">Regresar</a>
                    <input type="submit" value="Editar" class="btn btn-warning" />
                </div>
                <input type="hidden" asp-for="cuenta.IdCuenta" />
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

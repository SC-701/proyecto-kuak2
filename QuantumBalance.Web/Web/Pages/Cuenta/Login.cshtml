@page
@model Web.Pages.Cuenta.LoginModel
@{ 
	ViewData["Title"] = "Iniciar Sesión";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <!-- Header -->
            <div class="text-center mb-4">
                <div class="icon-circle mb-3">
                    <i class="bi bi-person-check"></i>
                </div>
                <h1 class="form-title">Iniciar Sesión</h1>
                <p class="form-subtitle">Accede a tu cuenta de QuantumBalance</p>
            </div>

            <!-- Form Card -->
            <div class="form-card">
                <form method="post" autocomplete="off" novalidate>
                    @if (Model.token is not null && Model.token.ValidacionExitosa == false)
                    {
                        <div class="alert alert-danger mb-4" role="alert">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            Credenciales incorrectas. Verifica tu correo y contraseña.
                        </div>
                    }

                    <!-- Correo Electrónico -->
                    <div class="form-group">
                        <label asp-for="loginInfo.CorreoElectronico" class="form-label">
                            <i class="bi bi-envelope"></i> Correo electrónico
                        </label>
                        <input type="email" asp-for="loginInfo.CorreoElectronico" class="form-control" placeholder="tu@email.com" />
                        <span asp-validation-for="loginInfo.CorreoElectronico" class="text-danger"></span>
                    </div>

                    <!-- Contraseña -->
                    <div class="form-group">
                        <label asp-for="loginInfo.Password" class="form-label">
                            <i class="bi bi-key"></i> Contraseña
                        </label>
                        <input type="password" asp-for="loginInfo.Password" class="form-control" placeholder="Tu contraseña" />
                        <span asp-validation-for="loginInfo.Password" class="text-danger"></span>
                    </div>

                    <!-- Botón -->
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-box-arrow-in-right"></i> Iniciar Sesión
                        </button>
                    </div>

                    <input type="hidden" asp-for="loginInfo.CorreoElectronico" />

                    <!-- Links adicionales -->
                    <div class="text-center mt-3 pt-3" style="border-top: 1px solid rgba(255, 255, 255, 0.08);">
                        <p class="text-muted mb-2">¿No tienes cuenta?</p>
                        <a href="./registro" class="btn btn-outline-secondary">
                            <i class="bi bi-person-plus"></i> Registrarse
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    /* Contenedor principal */
    .container {
        margin-top: 84px; /* espacio para navbar fijo */
        padding-left: 1rem;
        padding-right: 1rem;
    }

    /* Icono circular del header */
    .icon-circle {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
        font-size: 24px;
        color: white;
    }

    /* Títulos */
    .form-title {
        font-size: 2rem;
        font-weight: 700;
        color: #f1f5f9;
        margin-bottom: 0.5rem;
    }

    .form-subtitle {
        color: #94a3b8;
        font-size: 1.1rem;
    }

    /* Card del formulario */
    .form-card {
        background: rgba(17, 24, 39, 0.8);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 16px;
        padding: 1.5rem;
        backdrop-filter: blur(10px);
    }

    /* Grupos de campos */
    .form-group { margin-bottom: 1.25rem; }

    /* Labels con iconos */
    .form-label {
        color: #e2e8f0;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .form-label i {
        color: #6366f1;
        margin-right: 0.5rem;
    }

    /* Inputs y selects */
    .form-control,
    .form-select {
        background: rgba(30, 41, 59, 0.8);
        border: 1px solid rgba(71, 85, 105, 0.5);
        color: #e2e8f0;
        border-radius: 8px;
        padding: 0.75rem 0.875rem;
    }

    .form-control:focus, .form-select:focus {
        background: rgba(30, 41, 59, 0.9);
        border-color: #6366f1;
        box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
        color: #f1f5f9;
    }

    .form-control::placeholder {
        color: #64748b;
    }

    /* Texto de ayuda */
    .form-text {
        color: #94a3b8;
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }

    /* Errores de validación */
    .text-danger {
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }

    /* Botones */
    .form-actions {
        display: flex;
        gap: 0.75rem;
        justify-content: center;
        margin-top: 1.5rem;
        padding-top: 1rem;
        border-top: 1px solid rgba(255, 255, 255, 0.08);
    }

    .btn {
        padding: 0.7rem 1.25rem;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.2s;
    }

    .btn-primary {
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
        border: none;
        color: white;
    }

    .btn-primary:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
    }

    .btn-outline-secondary {
        background: transparent;
        border: 1px solid rgba(148, 163, 184, 0.3);
        color: #94a3b8;
    }

    .btn-outline-secondary:hover {
        background: rgba(148, 163, 184, 0.1);
        border-color: #94a3b8;
        color: #e2e8f0;
    }

    /* Sin media queries: estilos base aplican en todos los tamaños */
</style>
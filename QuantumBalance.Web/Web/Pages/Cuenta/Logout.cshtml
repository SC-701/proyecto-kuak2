@page
@model Web.Pages.Cuenta.LogoutModel
@{
	ViewData["Title"] = "Cerrar Sesión";
}

<section class="feature-section pt-0 py-4" style="color: #f1f5f9;">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-lg-6 col-xl-5">
				<div class="card qb-glass p-3 p-md-4" style="border-radius: 16px;">
					<span class="qb-gradient-border" aria-hidden="true"></span>
					<div class="card-body text-center" style="padding: 2rem 1.5rem;">
						<div class="d-flex align-items-center justify-content-center mb-3">
							<div class="qb-icon-badge" aria-hidden="true"><i class="bi bi-box-arrow-right"></i></div>
						</div>
						<h1 class="h3 fw-700 mb-2">Sesión Cerrada</h1>
						<p class="text-secondary mb-4">Has cerrado sesión exitosamente. ¡Gracias por usar QuantumBalance!</p>

						<div class="qb-actions-section d-flex flex-column flex-sm-row gap-2 justify-content-center">
							<a href="/Cuenta/Login" class="btn btn-outline-primary d-inline-flex align-items-center justify-content-center gap-2">
								<i class="bi bi-box-arrow-in-right"></i>
								<span>Iniciar Sesión</span>
							</a>
							<a href="/" class="btn btn-outline-light d-inline-flex align-items-center justify-content-center gap-2">
								<i class="bi bi-house"></i>
								<span>Inicio</span>
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

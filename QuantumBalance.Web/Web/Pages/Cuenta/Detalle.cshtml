@page "{id:guid}"
@model Web.Pages.Cuentas.DetalleModel
@{
    ViewData["Title"] = "Detalle de Cuenta";
}

<header class="subhead">
    <div class="container">
        <div class="masthead-heading text-uppercase">Detalle de la Cuenta</div>
    </div>
</header>

<section class="page-section bg-light">
    <div class="container">
        <div class="col-md-8 offset-md-2">

            <h4>Información de la Cuenta</h4>
            <dl class="row">
                <dt class="col-sm-4">Nombre</dt>
                <dd class="col-sm-8">@Model.Cuenta.Nombre</dd>

                <dt class="col-sm-4">Descripción</dt>
                <dd class="col-sm-8">@Model.Cuenta.Descripcion</dd>

                <dt class="col-sm-4">Categoría</dt>
                <dd class="col-sm-8">@Model.Cuenta.idCategoria</dd>

                <dt class="col-sm-4">Permite Saldo Negativo</dt>
                <dd class="col-sm-8">@(Model.Cuenta.PermitirSalarioNegativo ? "Sí" : "No")</dd>

                <dt class="col-sm-4">Usuario</dt>
                <dd class="col-sm-8">@Model.Cuenta.Usuario</dd>

                <dt class="col-sm-4">Estado</dt>
                <dd class="col-sm-8">@(Model.Cuenta.Estado ? "Activo" : "Inactivo")</dd>

                <dt class="col-sm-4">Fecha de Creación</dt>
                <dd class="col-sm-8">@Model.Cuenta.FechaCreacion.ToString("yyyy-MM-dd HH:mm")</dd>

                <dt class="col-sm-4">Última Modificación</dt>
                <dd class="col-sm-8">@Model.Cuenta.FechaUltimaModificacion.ToString("yyyy-MM-dd HH:mm")</dd>
            </dl>

            <a asp-page="Index" class="btn btn-secondary">Volver</a>
        </div>
    </div>
</section>

@page
@model Web.Pages.Cuenta.AccesoDenegadoModel
@{
	ViewData["Title"] = "Acceso Denegado";
}

<section class="feature-section pt-0 py-4" style="color: #f1f5f9;">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-lg-8 col-xl-7">
				<div class="card qb-glass p-3 p-md-4" style="border-radius: 16px;">
					<span class="qb-gradient-border" aria-hidden="true"></span>
					<div class="card-body text-center" style="padding: 2rem 1.5rem;">
						<div class="d-flex align-items-center justify-content-center mb-3">
							<div class="qb-icon-badge" aria-hidden="true" style="background: linear-gradient(135deg, #ef4444, #dc2626);"><i class="bi bi-shield-exclamation"></i></div>
						</div>
						<h1 class="h2 fw-700 mb-2 text-danger">403 - Acceso Denegado</h1>
						<p class="text-secondary mb-4">No tienes permisos para acceder a este recurso.</p>
						
						<div class="mb-4">
							<img src="~/assets/img/403.webp" alt="Acceso denegado" class="img-fluid rounded" style="max-width: 300px; opacity: 0.8;" />
						</div>

						<div class="qb-actions-section d-flex flex-column flex-sm-row gap-2 justify-content-center">
							<a href="/" class="btn btn-outline-primary d-inline-flex align-items-center justify-content-center gap-2">
								<i class="bi bi-house"></i>
								<span>Ir al inicio</span>
							</a>
							<a href="javascript:history.back()" class="btn btn-outline-light d-inline-flex align-items-center justify-content-center gap-2">
								<i class="bi bi-arrow-left-circle"></i>
								<span>Volver</span>
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>


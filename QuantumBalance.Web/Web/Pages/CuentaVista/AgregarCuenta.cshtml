@page
@model Web.Pages.CuentaVista.AgregarCuentaModel
@{
    ViewData["Title"] = "Agregar Cuenta";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <!-- Header -->
            <div class="text-center mb-4">
                <div class="icon-circle mb-3">
                    <i class="bi bi-plus-circle-fill"></i>
                </div>
                <h1 class="form-title">Nueva Cuenta</h1>
                <p class="form-subtitle">Crea una nueva cuenta para gestionar tus finanzas</p>
            </div>

            <!-- Form Card -->
            <div class="form-card">
                <form method="post" autocomplete="off" novalidate>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>

                    <input type="hidden" asp-for="cuenta.IdCuenta" />
                    <input type="hidden" asp-for="cuenta.IdUsuario" />

                    <!-- Nombre -->
                    <div class="form-group">
                        <label asp-for="cuenta.Nombre" class="form-label">
                            <i class="bi bi-wallet2"></i> Nombre de la cuenta
                        </label>
                        <input asp-for="cuenta.Nombre" class="form-control" placeholder="Ej: Cuenta Principal, Ahorros..." />
                        <span asp-validation-for="cuenta.Nombre" class="text-danger"></span>
                    </div>

                    <!-- Descripción -->
                    <div class="form-group">
                        <label asp-for="cuenta.Descripcion" class="form-label">
                            <i class="bi bi-card-text"></i> Descripción
                        </label>
                        <textarea asp-for="cuenta.Descripcion" class="form-control" rows="3" placeholder="Describe el propósito de esta cuenta..."></textarea>
                        <span asp-validation-for="cuenta.Descripcion" class="text-danger"></span>
                    </div>

                    <!-- Tipo -->
                    <div class="form-group">
                        <label asp-for="cuenta.Tipo" class="form-label">
                            <i class="bi bi-gear-fill"></i> Tipo de cuenta
                        </label>
                        <select asp-for="cuenta.Tipo" class="form-select">
                            <option value="">Selecciona el tipo</option>
                            <option value="Debito">Débito (Gastos)</option>
                            <option value="Credito">Crédito (Ingresos)</option>
                        </select>
                        <div class="form-text">Débito para gastos, Crédito para ingresos</div>
                        <span asp-validation-for="cuenta.Tipo" class="text-danger"></span>
                    </div>

                    <!-- Botones -->
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Crear Cuenta
                        </button>
                        <a asp-page="/CuentaVista/ObtenerCuentas" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    /* Contenedor principal */
    .container {
        margin-top: 80px; /* Espacio para navbar fijo */
    }

    /* Icono circular del header */
    .icon-circle {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
        font-size: 24px;
        color: white;
    }

    /* Títulos */
    .form-title {
        font-size: 2rem;
        font-weight: 700;
        color: #f1f5f9;
        margin-bottom: 0.5rem;
    }

    .form-subtitle {
        color: #94a3b8;
        font-size: 1.1rem;
    }

    /* Card del formulario */
    .form-card {
        background: rgba(17, 24, 39, 0.8);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 16px;
        padding: 2rem;
        backdrop-filter: blur(10px);
    }

    /* Grupos de campos */
    .form-group {
        margin-bottom: 1.5rem;
    }

    /* Labels con iconos */
    .form-label {
        color: #e2e8f0;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .form-label i {
        color: #6366f1;
        margin-right: 0.5rem;
    }

    /* Inputs y selects */
    .form-control, .form-select {
        background: rgba(30, 41, 59, 0.8);
        border: 1px solid rgba(71, 85, 105, 0.5);
        color: #e2e8f0;
        border-radius: 8px;
        padding: 0.75rem;
    }

    .form-control:focus, .form-select:focus {
        background: rgba(30, 41, 59, 0.9);
        border-color: #6366f1;
        box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
        color: #f1f5f9;
    }

    .form-control::placeholder {
        color: #64748b;
    }

    /* Texto de ayuda */
    .form-text {
        color: #94a3b8;
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }

    /* Errores de validación */
    .text-danger {
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }

    /* Botones */
    .form-actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
        margin-top: 2rem;
        padding-top: 1rem;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    .btn {
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        transition: all 0.2s;
    }

    .btn-primary {
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
        border: none;
        color: white;
    }

    .btn-primary:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
    }

    .btn-outline-secondary {
        background: transparent;
        border: 1px solid rgba(148, 163, 184, 0.3);
        color: #94a3b8;
    }

    .btn-outline-secondary:hover {
        background: rgba(148, 163, 184, 0.1);
        border-color: #94a3b8;
        color: #e2e8f0;
    }

   
    }
</style>

@page
@model Web.Pages.CuentaVista.AgregarCuentaModel
@{
	ViewData["Title"] = "Agregar Cuenta";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
	<div class="card shadow-lg p-4" style="min-width: 350px; max-width: 400px; width: 100%;">
		<div class="card-body">
			<h2 class="card-title text-center mb-4"><i class="bi bi-plus-circle"></i> Agregar Cuenta</h2>
			<form method="post" autocomplete="off">
				<div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

				<div class="mb-3">
					<label asp-for="cuenta.IdCategoria" class="form-label"></label>
					<input asp-for="cuenta.IdCategoria" class="form-control" placeholder="Ingrese el ID de la categoría" />
					<small class="form-text text-muted">ID de la categoría a la que pertenece la cuenta.</small>
					<span asp-validation-for="cuenta.IdCategoria" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label asp-for="cuenta.IdCuenta" class="form-label"></label>
					<input asp-for="cuenta.IdCuenta" class="form-control" placeholder="Ingrese el ID de la cuenta" />
					<small class="form-text text-muted">ID único para la cuenta.</small>
					<span asp-validation-for="cuenta.IdCuenta" class="text-danger"></span>
				</div>

				<div class="d-flex justify-content-between">
					<button type="submit" class="btn btn-primary w-50 me-2"><i class="bi bi-save"></i> Guardar</button>
					<a asp-page="/Index" class="btn btn-secondary w-50 ms-2"><i class="bi bi-x-circle"></i> Cancelar</a>
				</div>
			</form>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}

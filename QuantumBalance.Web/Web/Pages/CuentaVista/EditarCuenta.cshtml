@page "{IdCuenta?}"
@model Web.Pages.CuentaVista.EditarCuentaModel
@{
	ViewData["Title"] = "Editar Cuenta";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
	<div class="card shadow-lg p-4" style="min-width: 350px; max-width: 600px; width: 100%;">
		<div class="card-body">
			<h2 class="card-title text-center mb-4"><i class="bi bi-pencil-square"></i> Editar Cuenta</h2>
			<form method="post" autocomplete="off">
				<div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

				<input type="hidden" asp-for="cuentaRequest.IdCuenta" />

				<div class="mb-3">
					<label asp-for="cuentaRequest.IdUsuario" class="form-label"></label>
					<input asp-for="cuentaRequest.IdUsuario" class="form-control" />
					<span asp-validation-for="cuentaRequest.IdUsuario" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label asp-for="cuentaRequest.Nombre" class="form-label"></label>
					<input asp-for="cuentaRequest.Nombre" class="form-control" />
					<span asp-validation-for="cuentaRequest.Nombre" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label asp-for="cuentaRequest.Descripcion" class="form-label"></label>
					<input asp-for="cuentaRequest.Descripcion" class="form-control" />
					<span asp-validation-for="cuentaRequest.Descripcion" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label asp-for="cuentaRequest.Tipo" class="form-label"></label>
					<input asp-for="cuentaRequest.Tipo" class="form-control" />
					<span asp-validation-for="cuentaRequest.Tipo" class="text-danger"></span>
				</div>

				<div class="d-flex justify-content-between">
					<button type="submit" class="btn btn-primary w-50 me-2"><i class="bi bi-save"></i> Guardar</button>
					<a asp-page="/CuentaVista/ObtenerCuentaPorId" asp-route-IdCuenta="@Model.cuentaRequest?.IdCuenta" class="btn btn-secondary w-50 ms-2"><i class="bi bi-x-circle"></i> Cancelar</a>
				</div>
			</form>
		</div>
	</div>
 </div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}

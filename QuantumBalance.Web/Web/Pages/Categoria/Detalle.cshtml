@page
@model Web.Pages.Categoria.DetalleModel
@{
	ViewData["Title"] = "Detalle de Categoría";
}

<section class="feature-section pt-0 py-4" style="color: #f1f5f9;">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-lg-8 col-xl-7">
				<div class="card qb-glass p-3 p-md-4" style="border-radius: 16px;">
					<span class="qb-gradient-border" aria-hidden="true"></span>
					<div class="card-body" style="padding: 1.5rem 1.5rem;">
						<div class="d-flex align-items-center justify-content-center mb-3">
							<div class="qb-icon-badge" aria-hidden="true"><i class="bi bi-tags"></i></div>
						</div>
						<h1 class="h3 text-center fw-700 mb-4">Detalle de categoría</h1>

						@if (Model.Categoria == null)
						{
							<div class="alert alert-warning" role="alert">
								No se encontró la categoría solicitada.
							</div>
						}
						else
						{
							<dl class="row mb-0" style="row-gap: .25rem;">
								<dt class="col-sm-4 text-secondary">Nombre</dt>
								<dd class="col-sm-8" style="margin-bottom: .5rem;">@Model.Categoria.Nombre</dd>

								<dt class="col-sm-4 text-secondary">Descripción</dt>
								<dd class="col-sm-8" style="margin-bottom: .5rem;">@Model.Categoria.Descripcion</dd>

								<dt class="col-sm-4 text-secondary">ID</dt>
								<dd class="col-sm-8" style="margin-bottom: .5rem;"><span class="badge bg-secondary">@Model.Categoria.IdCategoria</span></dd>
							</dl>

							<div class="qb-actions-section d-flex flex-column flex-sm-row gap-2 mt-4" style="margin-top: 1.5rem;">
								<a asp-page="/Categoria/Editar" asp-route-id="@Model.Categoria.IdCategoria" class="btn btn-outline-primary d-inline-flex align-items-center justify-content-center gap-2">
									<i class="bi bi-pencil-square"></i>
									<span>Editar</span>
								</a>
								<a asp-page="/Categoria/Index" class="btn btn-outline-light d-inline-flex align-items-center justify-content-center gap-2">
									<i class="bi bi-arrow-left-circle"></i>
									<span>Volver</span>
								</a>
							</div>
						}
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}


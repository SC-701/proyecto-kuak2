@page
@model Web.Pages.Categoria.IndexModel
@{
	ViewData["Title"] = "Categorías";
}

<section class="landing-hero qb-hero-compact mb-4">
	<div class="container text-center qb-hero-content">
		<div class="d-flex justify-content-center mb-3">
			<div class="qb-icon-badge" aria-hidden="true"><i class="bi bi-tags"></i></div>
		</div>
		<h1 class="qb-hero-title mb-2">Tus Categorías</h1>
		<p class="qb-hero-subtitle">Organiza y clasifica tus movimientos con precisión cuántica.</p>
		<a asp-page="/Categoria/Agregar" class="btn btn-outline-light btn-lg d-inline-flex align-items-center gap-2 mt-3" aria-label="Agregar una nueva categoría">
			<i class="bi bi-plus-circle"></i>
			<span>Agregar categoría</span>
		</a>
	</div>
    
</section>

<section class="feature-section pt-0 py-4">
	<div class="container">
		@if (Model.Categorias == null || !Model.Categorias.Any())
		{
			<div class="row">
				<div class="col-lg-6 col-xl-5 mx-auto">
					<div class="qb-glass p-4 p-md-5 text-center mb-3">
						<span class="qb-gradient-border" aria-hidden="true"></span>
						<h2 class="h4 fw-700 mb-2">Aún no tienes categorías</h2>
						<p class="text-secondary mb-4">Crea tu primera categoría para organizar tus movimientos.</p>
						<a asp-page="/Categoria/Agregar" class="btn btn-outline-primary d-inline-flex align-items-center gap-2" aria-label="Crear tu primera categoría">
							<i class="bi bi-plus-circle"></i>
							<span>Crear categoría</span>
						</a>
					</div>
				</div>
			</div>
		}
		else
		{
			<div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4">
				@foreach (var c in Model.Categorias)
				{
					<div class="col">
						<article class="card qb-glass h-100">
							<span class="qb-gradient-border" aria-hidden="true"></span>
							<div class="card-body d-flex flex-column p-3 p-md-4">
								<div class="d-flex align-items-center justify-content-between mb-2">
									<h3 class="h5 mb-0 text-white">@c.Nombre</h3>
									<span class="badge bg-success"><i class="bi bi-tag"></i></span>
								</div>
								<p class="card-text text-muted flex-grow-1 mb-0">@c.Descripcion</p>
							</div>
							<div class="card-footer bg-transparent border-0 pt-0 pb-3 px-3">
								<div class="d-flex flex-wrap gap-2">
									<a asp-page="/Categoria/Detalle" asp-route-id="@c.IdCategoria" class="btn btn-outline-light btn-sm d-inline-flex align-items-center gap-1" aria-label="Ver detalles de @c.Nombre">
										<i class="bi bi-eye"></i>
										<span>Ver</span>
									</a>
									<a asp-page="/Categoria/Editar" asp-route-id="@c.IdCategoria" class="btn btn-outline-primary btn-sm d-inline-flex align-items-center gap-1" aria-label="Editar @c.Nombre">
										<i class="bi bi-pencil-square"></i>
										<span>Editar</span>
									</a>
									<a asp-page="/Categoria/Eliminar" asp-route-id="@c.IdCategoria" class="btn btn-outline-danger btn-sm d-inline-flex align-items-center gap-1" aria-label="Eliminar @c.Nombre">
										<i class="bi bi-trash"></i>
										<span>Eliminar</span>
									</a>
								</div>
							</div>
						</article>
					</div>
				}
			</div>
		}
	</div>
</section>

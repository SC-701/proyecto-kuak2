@page
@model Web.Pages.Categoria.AgregarModel
@{
    ViewData["Title"] = "Agregar Categoría";
}

<h2>Agregar Categoría</h2>
<header class="subhead">
</header>

<section class="page-section bg-light" id="principal">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Agregar Categoría</h2>
            <h3 class="section-subheading text-muted">Complete la información solicitada</h3>
        </div>

        <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto">
            <form method="post">
                <div class="form-group">
                    <label class="control-label" asp-for="categoria.Nombre"></label>
                    <input class="form-control" asp-for="categoria.Nombre" />
                    <span class="text-danger" asp-validation-for="categoria.Nombre"></span>
                </div>

                <div class="form-group">
                    <label class="control-label" asp-for="categoria.Descripcion"></label>
                    <input class="form-control" asp-for="categoria.Descripcion" />
                    <span class="text-danger" asp-validation-for="categoria.Descripcion"></span>
                </div>

                <div class="text-danger" asp-validation-summary="All"></div>

                <div class="form-group mt-3">
                    <a class="btn btn-primary" asp-page="./Index">Regresar</a>
                    <input type="submit" value="Agregar" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@page
@model Web.Pages.Categorias.EliminarModel
@{
	ViewData["Title"] = "Eliminar Categoría";
}

<section class="feature-section pt-0 py-4" style="color: #f1f5f9;">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-10 col-lg-8 col-xl-7">
				<div class="card qb-glass p-3 p-md-4">
					<span class="qb-gradient-border" aria-hidden="true"></span>
					<div class="card-body">
						<div class="text-center mb-3">
							<div class="qb-icon-badge mb-2" aria-hidden="true"><i class="bi bi-exclamation-triangle"></i></div>
							<h1 class="h4 fw-700 mb-1">¿Eliminar esta categoría?</h1>
							<p class="text-secondary">Esta acción no se puede deshacer.</p>
						</div>
						@if (!string.IsNullOrEmpty(Model.ErrorMessage))
						{
							<div class="alert alert-danger">
								@Model.ErrorMessage
							</div>
						}
						@if (Model.categoria != null)
						{
							<dl class="row">
								<dt class="col-sm-3 text-secondary">Nombre</dt>
								<dd class="col-sm-9">@Model.categoria.Nombre</dd>
								<dt class="col-sm-3 text-secondary">Descripción</dt>
								<dd class="col-sm-9">@Model.categoria.Descripcion</dd>
								<dt class="col-sm-3 text-secondary">ID</dt>
								<dd class="col-sm-9"><span class="badge bg-secondary">@Model.categoria.IdCategoria</span></dd>
							</dl>

							<form method="post" class="qb-actions-section d-flex flex-column flex-sm-row gap-2 mt-2">
								<input type="hidden" asp-for="categoria.IdCategoria" />
								<input type="hidden" asp-for="categoria.Nombre" />
								<input type="hidden" asp-for="categoria.Descripcion" />
								<button type="submit" class="btn btn-outline-danger d-inline-flex align-items-center justify-content-center gap-2">
									<i class="bi bi-trash"></i>
									<span>Eliminar</span>
								</button>
								<a asp-page="/Categoria/Index" class="btn btn-outline-light d-inline-flex align-items-center justify-content-center gap-2">
									<i class="bi bi-x-circle"></i>
									<span>Cancelar</span>
								</a>
							</form>
						}
						else
						{
							<div class="alert alert-warning" role="alert">No se encontró la categoría.</div>
						}
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

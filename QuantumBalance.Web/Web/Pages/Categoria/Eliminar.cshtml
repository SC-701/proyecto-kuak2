@page
@model Web.Pages.Categorias.EliminarModel
@{
}
<header class="subhead">
</header>
<section class="page-section bg-light" id="principal">
    <div class="container">
        <div class="container">
            <div class="text-center">
                <h2 class="section-heading text-uppercase">Eliminar categoría</h2>
                <h3 class="section-subheading text-muted">¿Está seguro que desea eliminar esta categoría?</h3>
            </div>

            <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto ">
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-warning">
                        @Model.ErrorMessage
                    </div>
                }

                <form method="post">
                    <row>
                        <dt>
                            @Html.DisplayNameFor(model => model.categoria.Nombre):
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.categoria.Nombre)
                        </dd>
                    </row>
                    <row>
                        <dt>
                            @Html.DisplayNameFor(model => model.categoria.Descripcion):
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.categoria.Descripcion)
                        </dd>
                    </row>
                    <div class="form-group mt-3">
                        <a class="btn btn-primary" asp-page="./Index">Cancelar</a>
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                    </div>

                    <input type="hidden" asp-for="categoria.IdCategoria" />
                    <input type="hidden" asp-for="categoria.Nombre" />
                    <input type="hidden" asp-for="categoria.Descripcion" />
                </form>
            </div>
        </div>
    </div>
</section>

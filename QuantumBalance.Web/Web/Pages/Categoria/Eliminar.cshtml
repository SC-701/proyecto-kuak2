@page
@model Web.Pages.Categoria.EliminarModel
@{
    ViewData["Title"] = "Eliminar Categoría";
}

<div class="container mt-4">
    <h2>Eliminar categoría</h2>
    <div class="alert alert-warning" role="alert">
        ¿Está seguro que desea eliminar la siguiente categoría?
    </div>
    <form method="post">
        <div class="mb-3">
            <input asp-for="Categoria.idCategoria" class="form-control" hidden />
        </div>
        <div class="mb-3">
            <label asp-for="Categoria.Nombre" class="form-label"></label>
            <input asp-for="Categoria.Nombre" class="form-control" readonly />
            <span asp-validation-for="Categoria.Nombre" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Categoria.Descripcion" class="form-label"></label>
            <textarea asp-for="Categoria.Descripcion" class="form-control" readonly></textarea>
            <span asp-validation-for="Categoria.Descripcion" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-page="./Index" class="btn btn-secondary ms-2">Cancelar</a>
    </form>
</div>
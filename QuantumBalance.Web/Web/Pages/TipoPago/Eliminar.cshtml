@page
@model Web.Pages.TipoPago.EliminarModel
@{
    ViewData["Title"] = "Eliminar Tipo de Pago";
}

<div class="container mt-4">
    <h2>Eliminar tipo de pago</h2>
    <div class="alert alert-warning" role="alert">
        ¿Está seguro que desea eliminar el siguiente tipo de pago?
    </div>
    <form method="post">
        <div class="mb-3">
            <input asp-for="TipoPago.idTipoPago" class="form-control" hidden />
        </div>
        <div class="mb-3">
            <label asp-for="TipoPago.nombre" class="form-label"></label>
            <input asp-for="TipoPago.nombre" class="form-control" readonly />
            <span asp-validation-for="TipoPago.nombre" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="TipoPago.descripcion" class="form-label"></label>
            <textarea asp-for="TipoPago.descripcion" class="form-control" readonly></textarea>
            <span asp-validation-for="TipoPago.descripcion" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-page="./Index" class="btn btn-secondary ms-2">Cancelar</a>
    </form>
</div>

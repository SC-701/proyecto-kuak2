@page
@model Web.Pages.TipoPago.IndexModel
@{
}
<div class="container">
    <div class="row align-items-center">
        <div class="col">
            <h1>Listado de tipos de pago</h1>
        </div>
        <div class="col-auto ms-auto">
            <a class="btn btn-primary" asp-page="./Agregar">Nuevo tipo de pago</a>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        @if (Model.tiposPago != null)
        {
            @foreach (var tipoPago in Model.tiposPago)
            {
                <div class="col-md-4 my-2">
                    <div class="card">
                        <div class="card-body">
                            <div class="card-title">
                                <p>
                                    <span class="fw-bold">Nombre:</span> @tipoPago.nombre
                                </p>
                            </div>
                            <p>
                                <span class="fw-semibold">Descripcion:</span> @tipoPago.descripcion
                            </p>
                            <div>
                                <a type="button" class="btn btn-info" asp-page="./Detalle" asp-route-id="@tipoPago.idTipoPago">Detalle</a>
                                <a type="button" class="btn btn-warning" asp-page="./Editar" asp-route-id="@tipoPago.idTipoPago">Editar</a>
                                <a type="button" class="btn btn-danger" asp-page="./Eliminar" asp-route-id="@tipoPago.idTipoPago">Eliminar</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col">
                <h3>
                    no hay tipos de pago registrados
                </h3>
            </div>
        }
    </div>
</div>